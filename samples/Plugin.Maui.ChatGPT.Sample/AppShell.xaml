<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plugin.Maui.ChatGPT.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Plugin.Maui.ChatGPT.Sample.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <ShellContent
            Title="Text ChatGPT"
            ContentTemplate="{DataTemplate pages:TextChatGptPage}"
            Route="TextChatGPT"/>
        
        <ShellContent
            Title="Audio ChatGPT"
            ContentTemplate="{DataTemplate pages:AudioChatGptPage}"
            Route="AudioChatGPT"/>
        
    </TabBar>

</Shell>
