<?xml version="1.0" encoding="utf-8" ?>
<chat:Chat xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:chat="clr-namespace:Plugin.Maui.Chat.Controls;assembly=Plugin.Maui.Chat"
           x:Class="Plugin.Maui.ChatGPT.Controls.ChatGPT"
           x:DataType="chat:Chat"
           x:Name="chatGPT"
           
           IsStatusVisible="True">

    <chat:Chat.Triggers>
        <DataTrigger TargetType="chat:Chat" Binding="{Binding IsHandsFreeModeOn, Source={x:Reference chatGPT}}" Value="True">
            <Setter Property="HandsFreeModeColor" Value="Green"/>
        </DataTrigger>
        <DataTrigger TargetType="chat:Chat" Binding="{Binding IsHandsFreeModeOn, Source={x:Reference chatGPT}}" Value="False">
            <Setter Property="HandsFreeModeColor" Value="{Binding HandsFreeModeColor, Source={x:Reference chatGPT}}"/>
        </DataTrigger>
    </chat:Chat.Triggers>

</chat:Chat>
